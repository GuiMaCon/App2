<?xmlversion="1.0"encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Main">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/screenCardView"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:cardCornerRadius="25dp">

            <TextView
                android:id="@+id/tvOperations"
                android:layout_width="393dp"
                android:layout_height="140dp"
                android:gravity="center||right"
                android:textSize="65dp"
                tools:text="6" />

            <TextView
                android:id="@+id/tvResult"
                android:layout_width="393dp"
                android:layout_height="140dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="8dp"
                android:gravity="bottom||right"
                android:textSize="35dp"
                tools:text="6" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/headView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@color/btn_background_top"
                android:text="Raiz"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"

                android:background="@color/btn_background_top"
                android:text="PI"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@color/btn_background_top"
                android:text="potencia"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@color/btn_background_top"
                android:text="%"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:background="@drawable/button_ac"
                android:gravity="center"
                android:text="AC"
                android:textColor="@color/ac_text"
                android:textSize="40dp" />

            <Button
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_math"
                android:gravity="center"
                android:text="("
                android:textColor="@color/text_math"
                android:textSize="40dp" />

            <Button
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_math"
                android:gravity="center"
                android:text=")"
                android:textColor="@color/text_math"
                android:textSize="40dp" />

            <Button
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_math"
                android:gravity="center"
                android:text="/"
                android:textColor="@color/text_math"
                android:textSize="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
           android:gravity="center">

            <Button
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:background="@drawable/button_number"
                android:gravity="center"
                android:text="7"
                android:textColor="@color/text_number"
                android:textSize="40dp" />

            <Button
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_number"
                android:gravity="center"
                android:text="8"
                android:textColor="@color/text_number"
                android:textSize="40dp" />

            <Button
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_number"
                android:gravity="center"
                android:text="9"
                android:textColor="@color/text_number"
                android:textSize="40dp" />

            <Button
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_math"
                android:gravity="center"
                android:text="X"
                android:textColor="@color/text_math"
                android:textSize="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
           android:gravity="center">

            <Button
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:background="@drawable/button_number"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/text_number"
                android:textSize="40dp" />

            <Button
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_number"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/text_number"
                android:textSize="40dp" />

            <Button
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_number"
                android:gravity="center"
                android:text="6"
                android:textColor="@color/text_number"
                android:textSize="40dp" />

            <Button
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_math"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/text_math"
                android:textSize="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
           android:gravity="center">

            <Button
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:background="@drawable/button_number"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/text_number"
                android:textSize="40dp" />

            <Button
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_number"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/text_number"
                android:textSize="40dp" />

            <Button
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_number"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/text_number"
                android:textSize="40dp" />

            <Button
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_math"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/text_math"
                android:textSize="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
           android:gravity="center">

            <Button
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:background="@drawable/button_number"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/ac_text"
                android:textSize="40dp" />

            <Button
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_number"
                android:gravity="center"
                android:text="."
                android:textColor="@color/ac_text"
                android:textSize="40dp" />

            <Button
                android:layout_width="85dp"
                android:layout_height="85dp"
                tools:text="Prueba"
                android:background="@drawable/ic_backspace"
                />

            <Button
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_result"
                android:gravity="center"
                android:text="="
                android:textColor="@color/text_result"
                android:textSize="40dp" />
        </LinearLayout>




    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>